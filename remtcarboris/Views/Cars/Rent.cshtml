using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;

namespace remtcarboris.Views.Cars
{
    public class Rent
    {
<h2>Rent Car</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Make:</dt>
        <dd class="col-sm-10">@Model.Make</dd>

        <dt class="col-sm-2">Model:</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Rental Price:</dt>
        <dd class="col-sm-10">@Model.RentalPrice</dd>
    </dl>
</div>

<form asp-action="Rent" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="CustomerName">Your Name:</label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RentalDays">Rental Days:</label>
        <input asp-for="RentalDays" class="form-control" />
        <span asp-validation-for="RentalDays" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Confirm Rental</button>
</form>
    }
}
