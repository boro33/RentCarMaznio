using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;

namespace remtcarboris.Views.Cars.Rentals
{
    public class Index
    {
<h2>Rented Cars</h2>
<table class="table">
    <thead>
        <tr>
            <th>Car Id</th>
            <th>Make</th>
            <th>Model</th>
            <th>Customer Name</th>
            <th>Rental Days</th>
            <th>Total Rental Price</th>
        </tr>
    </thead>
    <tbody>     
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.CarId</td>
                <td>@rental.Car.Make</td>
                <td>@rental.Car.Model</td>
                <td>@rental.CustomerName</td>
                <td>@rental.RentalDays</td>
                <td>@rental.TotalRentalPrice</td>
            </tr>
        }
    </tbody>
</table>
    }
}
